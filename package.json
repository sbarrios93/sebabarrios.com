{
  "name": "dinhanhthi.com",
  "version": "3.3.0",
  "license": "MIT",
  "description": "A personal website for note-taking built based on 11ty engine with high performance.",
  "scripts": {
    "build": "npx rimraf -rf _site && npm run js:build && npm run css:build && eleventy && echo \"Starting copy...\" && mkdir -p _live && cp -Rf _site/* _live/ && echo \"End copy.\"",
    "local:watch": "ELEVENTY_ENV=local concurrently \"eleventy --serve\" \"npm run js:build-watch\" \"npm run css:watch-local\"",
    "local:build": "npx rimraf -rf _site && npm run js:build && npm run css:build-local && cross-env ELEVENTY_ENV=local eleventy --quiet && echo \"Starting copy...\" && cp -Rf _site/* _live/ && echo \"End copy.\"",
    "local:serve": "echo \"Starting copy...\" && cp -Rf _site/* _live/ && echo \"End copy.\" && http-server _live",
    "css:build": "node-sass src/css/main.scss -o src/css",
    "css:build-local": "node-sass --source-comments src/css/main.scss -o src/css",
    "css:watch-local": "node-sass --source-comments true src/css/main.scss -w -o src/css",
    "js:build": "rollup -c src/rollup.config.js",
    "js:build-watch": "rollup -c src/rollup.config.js -w",
    "debug": "DEBUG=* eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/dinhanhthi/dinhanhthi.com.git"
  },
  "bugs": {
    "url": "https://github.com/dinhanhthi/dinhanhthi.com/issues"
  },
  "homepage": "https://dinhanhthi.com",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@gerhobbelt/markdown-it-inline-text-color": "^1.0.1-1",
    "cross-env": "^7.0.3",
    "elasticlunr": "^0.9.5",
    "eleventy-plugin-local-images": "^0.4.0",
    "file-type": "^12.0.1",
    "fs-extra": "^8.1.0",
    "jsdom": "^15.1.1",
    "luxon": "^1.21.3",
    "markdown-it-anchor": "^5.2.5",
    "markdown-it-container": "^3.0.0",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-kbd": "^2.2.0",
    "markdown-it-task-lists": "^2.1.1",
    "node-fetch": "^2.6.1",
    "pug": ">=3.0.1",
    "rimraf": "^2.7.1",
    "shorthash": "0.0.2"
  },
  "dependencies": {
    "@ampproject/toolbox-optimizer": "^2.7.6",
