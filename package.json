    "eleventy-plugin-nesting-toc": "^1.2.0",
    "expect.js": "^0.3.1",
    "hasha": "^5.2.0",
    "html-minifier": "^4.0.0",
    "image-size": "^0.8.3",
    "jimp": "^0.16.1",
    "katex": "^0.13.0",
    "lru-cache": "^5.1.1",
    "markdown-it": "^11.0.1",
    "markdown-it-attrs": "^3.0.3",
    "markdown-it-emoji": "^2.0.0",
    "markdown-it-heading-wrapper": "github:mozilla/markdown-it-heading-wrapper",
