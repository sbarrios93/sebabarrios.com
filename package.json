    "clean-css": "^4.2.3",
    "concurrently": "^5.2.0",
    "copyfiles": "^2.4.1",
    "core-js": "^3.12.1",
    "csp-hash-generator": "0.0.3",
    "csso": "^4.0.3",
    "dark-mode-toggle": "^0.8.0",
