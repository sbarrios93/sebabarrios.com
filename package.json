{
  "name": "dinhanhthi.com",
  "version": "3.3.0",
  "license": "MIT",
  "description": "A personal website for note-taking built based on 11ty engine with high performance.",
  "scripts": {
    "watch:sass": "sass --watch src/css:_site/src/css",
    "watch:sass-local": "node-sass --watch src/css/main.scss -o src/css",
    "build:sass": "sass src/css:src/css",
    "build:js": "rollup -c src/rollup.config.js",
    "watch:tailwind": "postcss src/tailwind/style.css > _site/src/tailwind/style.css",
    "watch:eleventy": "eleventy --serve",
    "build:eleventy": "eleventy",
    "build-watch:js": "rollup -c src/rollup.config.js -w",
    "produce-tailwind": "NODE_ENV=production postcss src/tailwind/style.css > _site/src/tailwind/style.css",
    "set-env": "ELEVENTY_ENV=local",
    "start": "rm -rf _site && mkdir _site && mkdir -p _site/src/tailwind && npm-run-all set-env build:sass build:js --parallel watch:*",
    "build": "npm-run-all build:* produce-tailwind"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/dinhanhthi/dinhanhthi.com.git"
  },
  "bugs": {
    "url": "https://github.com/dinhanhthi/dinhanhthi.com/issues"
  },
  "homepage": "https://dinhanhthi.com",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0-beta.1",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.2",
    "@rollup/plugin-json": "^4.1.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "elasticlunr": "^0.9.5",
    "eleventy-plugin-local-images": "^0.4.0",
    "file-type": "^12.0.1",
    "fs-extra": "^8.1.0",
    "jsdom": "^15.1.1",
    "luxon": "^1.21.3",
    "node-fetch": "^2.6.1",
    "node-gyp": "^8.3.0",
    "postcss-cli": "^9.0.1",
    "rimraf": "^2.7.1",
    "shorthash": "0.0.2"
  },
  "dependencies": {
    "@ampproject/toolbox-optimizer": "latest",
    "@fortawesome/fontawesome-free": "latest",
